
<section class="our-presentation" id="our-presentation">
    <div class="container">
        <div class="heading text-center animate bounceIn">
            <h2 class="main-title">Actualité</h2>
            <div class="height-20"></div>
        </div>
        <div class="row">
            {% if presentations is empty %}
            <h4 class="text-center">Aucune Actualité n'est disponible</h4>
            {% else %}
            {% for key,new in news %}
            <div class="col-md-4 summary">
                <div class="text-box">
                    <div class="bordered-thumb service" style="height: 220px; overflow: hidden">
                        {% if new.FirstMedia %}
                            <img src="{{ asset('upload_medias/'~ new.firstMedia.image) }}" alt="">
                        {% else %}
                            <img src="{{ asset('images/bmsconsulting/bms-consulting-mini2.jpg') }}" alt="">
                        {% endif %}
                    </div>
                    <h4>{{ new.title|capitalize }}</h4>
{#
                    <p class="service-summary">{{ new.content|striptags|slice(0, 100)  }}..</p>
#}
                    <a href="{{ path('news_details', {slug: new.slug}) }}"
                       class="btn btn-bordered-green"
                       data-text="{{ 'app.paragraph.read_more'|trans }}">
                        {{ 'app.paragraph.read_more'|trans }}
                    </a>
                </div>
            </div>
            {% if key != 0 and  (key + 1)%3 == 0 %}
        </div>
        <div class="row">
            {% endif %}
            {% endfor %}
            {% endif %}
        </div>
    </div>
</section>

