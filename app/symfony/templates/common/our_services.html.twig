<section class="our-service">
    <div class="container">
        <div class="heading text-center animate bounceIn">
            <h2 class="main-title">Nos Services </h2>
            <div class="height-20"></div>
        </div>
        <div class="row">
            {% if services is empty %}
            <h4 class="text-center">Aucun service n'est disponible</h4>
            {% else %}
            {% for key,service in services %}
            <div class="col-md-4">
                <div class="text-box">
                    <div class="bordered-thumb service" style="height: 220px; overflow: hidden">
                        {% if service.FirstMedia %}
                            <a href="{{ path('service_details', {slug: service.slug}) }}">
                                <img src="{{ asset('upload_medias/'~ service.firstMedia.image) }}" alt="">
                            </a>
                        {% else %}
                        <a href="{{ path('service_details', {slug: service.slug}) }}">
                        <img src="{{ asset('images/bmsconsulting/bms-consulting-mini2.jpg') }}" alt="">
                        </a>
                        {% endif %}

                    </div>
                    <h4 style="color: green">{{ service.title|capitalize }}</h4>
{#
                    <p style="min-height: 30px; overflow: hidden">{{ service.content|striptags|slice(0, 100)  }} ... </p>
#}
                    <a href="{{ path('service_details', {slug: service.slug}) }}"
                       class="link-grey">
                        <i class="fa fa-caret-right"></i>
                        {{ 'app.paragraph.read_more'|trans }}
                    </a>
                </div>
            </div>
            {% if key != 0 and  (key + 1)%3 == 0 %}
        </div>
        <div class="row">
            {% endif %}
            {% endfor %}
            {% endif %}
        </div>
    </div>
</section>
