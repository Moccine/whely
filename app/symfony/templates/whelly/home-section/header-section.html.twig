<header id="header" class="site-header header-style-2">
    <div class="topbar">
        <div class="container">
            <div class="row">
                <div class="col col-md-9">
                    <div class="contact-info">
                        <ul>
                            <li><i class="ti-mobile"></i>{{ 'whelly.phone_1'|trans }}</li>
                            <li><i class="ti-email"></i>{{ 'whelly.mail'|trans }}</li>
                            <li><i class="ti-time"></i> {{ 'whelly.open_time'|trans }}</li>
                        </ul>
                    </div>
                </div>
                <div class="col col-md-3">
                    <div class="social">
                        <ul>
                            <li><a href="#"><i class="ti-facebook"></i></a></li>
                            <li><a href="#"><i class="ti-twitter-alt"></i></a></li>
                            <li><a href="#"><i class="ti-linkedin"></i></a></li>
                            <li><a href="#"><i class="ti-pinterest"></i></a></li>
                        </ul>
                    </div>
                    <div class="social">
                        <ul class="language">
                            <li ><a class="{{ app.request.getLocale() == 'fr' ? 'active' : '' }}" href="{{ path('setlocale', {'language': 'fr'}) }}">FR</a></li>
                            <li><a class="{{ app.request.getLocale() == 'en' ? 'active' : '' }}" href="{{ path('setlocale', {'language': 'en'}) }}">EN</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- end topbar -->
    <nav class="navigation navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="open-btn">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                {# LOGO #}
                <a class="navbar-brand" href="{{ path('whelly_index') }}">
                    <img class="logo-whelly" src="{{ asset('whelly/assets/images/logo.png') }}" alt="logo whelly">
                </a>
            </div>

            <div id="navbar" class="navbar-collapse collapse navbar-right navigation-holder">
                <button class="close-navbar"><i class="ti-close"></i></button>
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('whelly_index') }}">{{ 'whelly.section.header.menu.home'|trans }}</a></li>
                    <li><a href="{{ path('whelly_about_us') }}">{{ 'whelly.section.header.menu.about'|trans }}</a></li>
                    <li><a href="{{ path('whelly_offers') }}">{{ 'whelly.section.header.menu.offers'|trans }}</a></li>
                    <li><a href={{ path('whelly_project') }}>{{ 'whelly.section.header.menu.projects'|trans }}</a></li>
                    <li><a href="{{ path('whelly_news') }}">{{ 'whelly.section.header.menu.news'|trans }}</a></li>
                    <li><a href="{{ path('whelly_contact') }}">{{ 'whelly.section.header.menu.contact'|trans }}</a></li>
                </ul>
            </div><!-- end of nav-collapse -->

            <div class="search-contact">
                <div class="header-search-form-wrapper">
                </div>
                <div class="contact-btn">
                    <a href="#" class="theme-btn">{{ 'whelly.section.header.menu.quote_request'|trans }}</a>
                </div>
            </div>
        </div>
    </nav>
