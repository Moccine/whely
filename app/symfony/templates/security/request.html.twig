{% extends 'base.html.twig' %}

{% block body %}
<section class="faq-area faq-about bg_cover pt-115 pb-120">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="section-title text-center">
                    <span>3Dtech</span>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="faq-box-area faq-box-about">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="faq-box white-bg">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="faq-form">
                                <h3>{{ 'app.form.reset.title'|trans }}</h3>

                                <div>
                                    {% for message in app.flashes('success') %}
                                        <div class="text-success">
                                            {{ message }}
                                        </div>
                                    {% endfor %}

                                    {% for message in app.flashes('error') %}
                                        <div class="text-danger">
                                            {{ message }}
                                        </div>
                                    {% endfor %}

                                    {{ form_start(form) }}
                                    <div>
                                        <div class="input-box mt-20">
                                            {{ form_widget(form.email) }}
                                        </div>
                                        <div class="input-box mt-20">
                                            {{ form_row(form.submit, {'attr':{'class': 'main-btn mt-35'}}) }}
                                        </div>
                                        {{ form_end(form) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
        {% include 'common/brand_section.html.twig' %}
        {% include 'common/subcribe_part.html.twig' %}

        {% endblock %}
